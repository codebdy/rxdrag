{
  "$schema": "https://turbo.build/schema.json",

  "globalDependencies": [".env.local"],

  "globalEnv": [
    "CI",
    "NODE_ENV",
    "BASE_URL",
    "REACT_APP_AUTH_API",
    "REACT_APP_SENTRY_DSN",
    "REACT_APP_SENTRY_TOKEN",
    "REACT_APP_SENTRY"
  ],

  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", "public/build/**"]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "test:watch": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
